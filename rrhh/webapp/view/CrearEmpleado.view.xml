<mvc:View controllerName="proyectofinal.rrhh.controller.CrearEmpleado" 
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true" 
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">
<Page title="{i18n>crearEmpleado}"> 
<NavContainer id="NavContainer" >
    <pages>
        <Page id="ContentPage" showHeader="false">
            <content>
                <Wizard id="CrearEmpleadoWizard" class="sapUiResponsivePadding--header sapUiResponsivePadding--content"
						complete="wizardComplete">
                    <!-- PASO 1-->
                    <WizardStep id="wizardPaso1" title="{i18n>wizardPaso1}" validated="false" >
                        <MessageStrip class="sapUiSmallMarginBottom"
									  text="{i18n>wizardPaso1Mensaje}"
									  showIcon="true"/>
                        <!-- <HBox alignItems="Center" justifyContent="Center" width="100%" > -->
                        <FlexBox alignItems="Center" justifyContent="Center" height="100px">
                            <!-- <SegmentedButton selectionChange="setTipoEmpleado" selectedItem="" selectedKey="{nuevoEmpleadoModel>/Type}">										
                                        <items>
                                            <SegmentedButtonItem key="0" text="{i18n>interno}" width="10rem" class="sapUiSmallMarginEnd"/>
                                            <SegmentedButtonItem key="1" text="{i18n>autonomo}" width="10rem" class="sapUiSmallMarginEnd"/>
											<SegmentedButtonItem key="2" text="{i18n>gerente}"  width="10rem"/>
										</items>                                        
                            </SegmentedButton> -->

                            <SegmentedButton selectionChange="setTipoEmpleado" selectedItem="{nuevoEmpleadoModel>/Type}" 
                                             items="{tiposModel>/Tipos}" selectedKey="{nuevoEmpleadoModel>/Type}">										
                                        <items>
                                            <SegmentedButtonItem key="{tiposModel>Key}" text="{tiposModel>Text}" width="10rem" class="sapUiSmallMarginEnd"/>
										</items>                                        
                            </SegmentedButton>

                        </FlexBox>		
                    </WizardStep>
                    
                    <!-- PASO 2-->
                    <WizardStep id="wizardPaso2" title="{i18n>wizardPaso2}" validated="true">
                        <MessageStrip class="sapUiSmallMarginBottom"
									  text="{i18n>wizardPaso2Mensaje}"
									  showIcon="true"/>
                        <form:SimpleForm>
                            <Label text="{i18n>nombre}" labelFor="inputNombre"/>
                            <Input id="inputNombre" maxLength="40"/>

                            <Label text="{i18n>apellidos}" labelFor="inputApellidos"/>
                            <Input id="inputApellidos" maxLength="40"/>

                            <Label text="{i18n>dni}" required="true" labelFor="inputDNI"/>
                            <Input id="inputDNI" maxLength="20" liveChange="validarDNI" valueState="Error" value="{nuevoEmpleadoModel>/Dni}"/>

                            <Label text="{i18n>cif}" required="true" labelFor="inputCIF"/>
                            <Input id="inputCIF" maxLength="20" value="{empleadosModel>Dni}" valueState="Error"/>

                            <Label text="{i18n>salario}"/>
                            <Slider showAdvancedTooltip="true" min="12000" max="80000" class="sapUiSmallMarginBottom"
                                    enableTickmarks="true" step="1000"/>

                            <Label text="{i18n>precio}"/>
                            <Slider showAdvancedTooltip="true" min="100" max="2000" class="sapUiSmallMarginBottom"
                                    enableTickmarks="true" step="100"/>

                            <Label text="{i18n>fecha}" required="true" labelFor="inputFecha" />
                            <DatePicker id="inputFecha" valueState="None" change="changeFecha" value="{nuevoEmpleadoModel>/CreationDate}"/>
                            

                        </form:SimpleForm>
                    </WizardStep>
                    
                    <!-- PASO 3-->
                    <WizardStep id="wizardPaso3" title="{i18n>wizardPaso3}" validated="true">
                        <MessageStrip class="sapUiSmallMarginBottom"
									  text="{i18n>wizardPaso3Mensaje}"
									  showIcon="true"/>
                        <Text text="{i18n>comentario}" class="sapUiTinyMarginTop"/>
                        <TextArea   id="textAreaWithBinding2" showExceededText="true" maxLength="200" width="100%" 
                                    liveChange="handleLiveChange" valueLiveUpdate="true"/>
                        
                        <UploadCollection   id="uploadCollection"
                                        maximumFilenameLength="55"
                                        maximumFileSize="10"
                                        multiple="true"
                                        sameFilenameAllowed="true"
                                        instantUpload="true"
                                        uploadUrl="/sap/opu/odata/sap/ZEMPLOYEES_SRV/Attachments"
                                        change="onFileChange"
                                        uploadComplete="onFileUploadComplete"
                                        beforeUploadStarts="onFileBeforeUpload"
                                        fileDeleted="onFileDeleted"/>  
                    </WizardStep>

                </Wizard>
            </content>
            <footer>
                <OverflowToolbar>
                    <ToolbarSpacer/>
					<Button text="{i18n>cancelar}" press="wizardCancel"/>
                </OverflowToolbar>
            </footer>
        </Page>
        <!-- REVIEW-->
        <Page id="wizardReviewPage" showHeader="false">
            <content>
                <form:SimpleForm title="{i18n>wizardPaso1}" minWidth="1024" editable="false" layout="ResponsiveGridLayout">
                    <form:content>
                        <Label text="{i18n>tipo}"/>
                        <Text id="ProductTypeChosen" text="{nuevoEmpleadoModel>/Type}"/>
                        <Link press="editPaso1" text="Edit" />
                    </form:content>
                </form:SimpleForm>

                <form:SimpleForm title="{i18n>wizardPaso2}" minWidth="1024" editable="false" layout="ResponsiveGridLayout">
                    <form:content>
                        <Label text="{i18n>nombre}"/>
                        <Text id="NombreReview" text="{/productName}"/>
                        <Label text="{i18n>apellidos}"/>
                        <Text id="ApellidosReview" text="{/productWeight}"/>
                        <Label text="{i18n>dni}"/>
                        <Text id="dniReview" text="{nuevoEmpleadoModel>/Dni}"/>
                        <Label text="{i18n>cif}"/>
                        <Text id="cifReview" text="{/productManufacturer}"/>
                        <Label text="{i18n>salario}"/>
                        <Text id="salarioReview" text="{/productDescription}"/>
                        <Label text="{i18n>precio}"/>
                        <Text id="precioReview" text="{nuevoEmpleadoModel>/CreationDate}"/>
                        <Label text="{i18n>fecha}"/>
                        <Text id="fechaReview" text="{/productDescription}"/>
                        <Link press="editPaso2" text="Edit" />
                    </form:content>
                </form:SimpleForm>

                <form:SimpleForm title="{i18n>wizardPaso3}" minWidth="1024" editable="false" layout="ResponsiveGridLayout">
                    <form:content>
                        <Label text="{i18n>comentario}"/>
                        <Text id="ProductNam" text="{/productName}"/>
                        <Label text="{i18n>documentos}"/>
                        <UploadCollection   id="UploadCollectionReview"
                                            uploadEnabled="false"
                                            uploadButtonInvisible="true"
                                            multiple="true"
                                            instantUpload="false"
                                            />
                        <Link press="editPaso3" text="Edit" />
                    </form:content>
                </form:SimpleForm>
            </content>

            <footer>
                <Bar>
                    <contentRight>
                        <Button text="Submit" press="handleWizardSubmit"/>
                        <Button text="Cancel" press="wizardCancel"/>
                    </contentRight>
                </Bar>
            </footer>
        </Page>
    </pages>
</NavContainer>
</Page>   
</mvc:View>